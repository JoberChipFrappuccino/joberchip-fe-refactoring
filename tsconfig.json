{
  "compilerOptions": {
    "target": "es2016",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["server/*"]
    },
    "jsx": "react-jsx",
    "module": "commonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["./src", "./server"],
  "exclude": ["./legacy", "./scripts", "*.md", "*.config.js", "node_modules"]
}
